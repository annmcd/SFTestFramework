        </dependency>
        <dependency>
            <groupId>com.force.api</groupId>
            <artifactId>force-tooling-api</artifactId>
            <version>LATEST</version>
        </dependency>
        <dependency>
            <groupId>com.force.api</groupId>
            <artifactId>force-wsc</artifactId>
            <version>${force-api-version}</version>
        </dependency>
        <dependency>
            <artifactId>junit</artifactId>
