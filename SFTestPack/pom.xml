        </dependency>
        <dependency>
            <groupId>com.cle.salesforce.test</groupId>
            <artifactId>SFObjectModel</artifactId>
            <version>1.2.4-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <repositories>
        <repository>
            <id>salesforce</id>
            <url>https://cle-crm.pkgs.visualstudio.com/_packaging/salesforce/maven/v1</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>salesforce</id>
            <url>https://cle-crm.pkgs.visualstudio.com/_packaging/salesforce/maven/v1</url>
        </repository>
    </distributionManagement>
    <profiles>
        <profile>
            <id>clean-log</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>${exec.version}</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <mainClass>com.test.cle.salesforce.utils.RemoveDuplicateLines</mainClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>