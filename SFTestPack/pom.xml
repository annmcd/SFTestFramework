        </dependency>

        <dependency>
            <artifactId>SFBulkData-jar-with-dependencies</artifactId>
            <groupId>com.cle.crm.salesforce.sfbulkdata.core</groupId>
            <version>LATEST</version>
        </dependency>
        <dependency>
            <artifactId>snakeyaml</artifactId>
            <groupId>org.yaml</groupId>
